<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:strokeWidth="1dp"
    app:strokeColor="@color/divider_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header con cliente y fecha -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvClientName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="María González"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tvServiceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Limpieza de hogar"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginTop="2dp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="15 Nov 2024"
                android:textSize="12sp"
                android:textColor="@color/text_secondary" />

        </LinearLayout>

        <!-- Calificación general -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Calificación General:"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginEnd="8dp" />

            <RatingBar
                android:id="@+id/ratingBarOverall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:rating="4.5"
                android:scaleX="0.7"
                android:scaleY="0.7"
                android:transformPivotX="0dp"
                android:transformPivotY="0dp"
                style="?android:attr/ratingBarStyleSmall" />

            <TextView
                android:id="@+id/tvOverallScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4.5"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:layout_marginStart="8dp" />

        </LinearLayout>

        <!-- Calificaciones detalladas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="12dp">

            <!-- Calidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Calidad:"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

                <RatingBar
                    android:id="@+id/ratingBarQuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    style="?android:attr/ratingBarStyleSmall" />

                <TextView
                    android:id="@+id/tvQualityScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="4dp"
                    android:minWidth="20dp" />

            </LinearLayout>

            <!-- Puntualidad -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Puntualidad:"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

                <RatingBar
                    android:id="@+id/ratingBarPunctuality"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="5.0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    style="?android:attr/ratingBarStyleSmall" />

                <TextView
                    android:id="@+id/tvPunctualityScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5.0"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="4dp"
                    android:minWidth="20dp" />

            </LinearLayout>

            <!-- Comunicación -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="6dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Comunicación:"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

                <RatingBar
                    android:id="@+id/ratingBarCommunication"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.5"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    style="?android:attr/ratingBarStyleSmall" />

                <TextView
                    android:id="@+id/tvCommunicationScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="4dp"
                    android:minWidth="20dp" />

            </LinearLayout>

            <!-- Limpieza -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Limpieza:"
                    android:textSize="13sp"
                    android:textColor="@color/text_secondary" />

                <RatingBar
                    android:id="@+id/ratingBarCleanliness"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:numStars="5"
                    android:rating="4.0"
                    android:scaleX="0.6"
                    android:scaleY="0.6"
                    android:transformPivotX="0dp"
                    android:transformPivotY="0dp"
                    style="?android:attr/ratingBarStyleSmall" />

                <TextView
                    android:id="@+id/tvCleanlinessScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.0"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="4dp"
                    android:minWidth="20dp" />

            </LinearLayout>

        </LinearLayout>

        <!-- Comentario -->
        <TextView
            android:id="@+id/tvReview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Excelente servicio, muy profesional y puntual. Recomiendo totalmente."
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:background="@drawable/review_background"
            android:padding="12dp"
            android:lineSpacingExtra="2dp"
            android:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
